<Window x:Class="BrushDemo.RadialGradientBrushWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrushDemo"
        mc:Ignorable="d"
        Title="RadialGradientBrushWin" Height="450" Width="800">
    <Grid>
        <Ellipse x:Name="ellipse" Width="100" Height="100" MouseMove="Ellipse_MouseMove" >
            <Ellipse.Fill>
                <RadialGradientBrush GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse> 
    </Grid>
</Window>
