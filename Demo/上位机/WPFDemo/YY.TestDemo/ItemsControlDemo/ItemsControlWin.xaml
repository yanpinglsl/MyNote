<Window x:Class="ItemsControlDemo.ItemsControlWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemsControlDemo"
        mc:Ignorable="d"
        Title="ItemsControlWin" Height="350" Width="500">
    <Grid>
        <ItemsControl>
            <Button Content="Content"  Height="30"  Margin="0,5"/>
            <Border Background="Pink" Height="30"  Margin="0,5"/>
            <TextBlock Background="Gray" Text="WPF中文网" Margin="0,5"/>
            <CheckBox Content="CheckBox元素" Margin="0,5"/>
            <ItemsControl Height="35" Background="Red"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <RadioButton Content="初级"/>
                <RadioButton Content="中级"/>
                <RadioButton Content="高级"/>
            </StackPanel>
            <Label Content="这是一串字符串" Margin="0,5"/>
            <Control Background="Black" Height="30" Margin="0,5"/>
            <ProgressBar Height="20" Value="50" Maximum="100" Margin="0,5"/>
        </ItemsControl>
    </Grid>
</Window>
