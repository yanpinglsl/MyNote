<Window x:Class="CommandBindingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommandBindingDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:CommandViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Width="100" Height="30" Content="测试Command" Command="{Binding OpenCommandParam}" CommandParameter="{Binding RelativeSource={RelativeSource Self},Path=Content}" />
    </Grid>
</Window>
