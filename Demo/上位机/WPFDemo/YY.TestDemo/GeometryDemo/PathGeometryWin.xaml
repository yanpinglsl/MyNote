<Window x:Class="GeometryDemo.PathGeometryWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeometryDemo"
        mc:Ignorable="d"
        Title="PathGeometryWin" Height="450" Width="800">
    <StackPanel>
        <Path Stroke="Green" StrokeThickness="20" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="20,20">
                            <PathFigure.Segments>
                                <LineSegment Point="20,130"/>
                                <LineSegment Point="200,130"/>
                                <LineSegment Point="200,260"/>
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
    </StackPanel>
</Window>
