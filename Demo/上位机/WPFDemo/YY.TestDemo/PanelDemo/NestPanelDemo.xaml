<Window x:Class="PanelDemo.NestPanelDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelDemo"
        mc:Ignorable="d"
        Title="NestPanelDemo" Height="450" Width="800">
    <DockPanel LastChildFill="True">        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" >
            <Button Content="OK" Margin="10"/>
            <Button Content="Cancel" Margin="10"/>
        </StackPanel>
        <TextBox Text="This is Test" Margin="10" DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
